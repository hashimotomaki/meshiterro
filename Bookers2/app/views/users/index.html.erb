<div class="container">
  <div class="row">
   <div class="col-xs-3">

    <%= render 'books/info', book: @book, user: @user %>

     <% if flash[:notice] %>
       <p><%= flash[:notice] %></p>
     <% end %>
   </div>
     <div class="main">
       <div class="col-xs-9">
          <h2>Users</h2>

               <table class="table">
                 <thead>
                    <tr>
                      <th>image</th>
                      <th>name</th>
                      <th colspan="3"></th>
                     </tr>
                  </thead>


          <% @users.each do |f| %>

                 <tbody>
                   <tr>
                      <td><%= attachment_image_tag f, :image,  :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
                      <td><%= f.name %></td>
                      <td><%= link_to "Show", user_path(f)  %></td>
                   </tr>
                  </tbody>
            <% end %>
            </table>
       </div>
     </div>
  </div>
</div>
