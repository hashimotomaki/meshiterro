<div class="row">
  <div class="col-xs-3">
    <%= render 'books/info', book: @book, user: @user %>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
    <% end %>
  </div>

  <div class="main">
     <div class="col-xs-9">
        <h2>Books</h2>
          <table class="table table-striped">
           <thead>
             <tr>
               <th></th>
               <th>Title</th>
               <th>Opinion</th>
               <th colspan="3"></th>
             </tr>
           </thead>


        <% form_with model: @book, local:true do |f| %>
         <% if @book.errors.any? %>
          <div id="error_explanation" class="alert alert-danger">
            <ul>
              <% @book.errors.full_messages.each do |message| %>
              <li><%= message + "error" %></li>
              <% end %>
            </ul>
           <% end %>
          </div>
        <% end %>



          <thead>
           <% @books.each do |book| %>
           <tr>
             <td><%= attachment_image_tag @user, :image,  :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
             <td><%= link_to book_path(book.id) do %><%= book.title %></tb><% end %>
             <td><%= book.body %> </td>
             <th colspan="2"></th>
           </tr>
           <% end %>
          </thead>
       </table>
      </div>
    </div>
  </div>