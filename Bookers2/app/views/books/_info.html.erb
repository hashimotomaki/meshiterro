<div class="main">
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

  <h2>User info</h2>
      <%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>

          <table class="table table-striped">
            <tbody><tr></tr>
              <tr>
                 <th>name</th>
    	           <th><%= current_user.name %></th>
              </tr>
              <tr>
    	          <th>introduction</th>
    	          <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>

      <%= link_to edit_user_path(current_user),class:"btn btn-default glyphicon glyphicon-wrench" do %>
      <% end %>

      <h2>New book</h2>

        <% if book.errors.any? %>
        　<div id="error_explanation" class="alert alert-danger">
         　<ul>
         　  <% book.errors.full_messages.each do |message| %>
            　<li><%= message + "error" %></li>
         　  <% end %>
         　 </ul>
        　</div>
        <% end %>

        <%= form_with model:book, url:'/books', local: true do |f| %>
           <div class="book_title">Title</div>
             <%= f.text_field :title %>

           <div class="book_body">Opinion</div>
             <%= f.text_field :body %>

           <div class="actions row"></div>
             <%= f.submit "Create Book" %>
        <% end %>
</div>
