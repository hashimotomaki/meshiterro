<div class="container">
  <div class="row">
   <div class="col-xs-3">

     <%= render 'books/info', book: @book, user: @user %>
   </div>
  <div class="main">
     <% form_with model:@book, local:true do |f| %>
     <% if @book.errors.any? %>
     <div id="error_explanation" class="alert alert-danger">
       <ul>
         <% @book.errors.full_messages.each do |message| %>
         <li><%= message + "error" %></li>
         <% end %>
       </ul>
     </div>
     <% end %>
     <% end %>

     <div class="col-xs-9">
       <h2>Book detail</h2>
         <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <tb><%= attachment_image_tag @user, :profile_image,  :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></tb>
                <tb><%= link_to user_path(@user.id) do %><%= @user.name %><% end %></tb>
                <tb><%= @book.title %></tb>
                <tb><%= @book.body %></tb>

                <% if @book.user_id == current_user.id %>
                <tb><%= link_to "Edit", edit_book_path(@book.id)%></tb>
                <tb><%= link_to 'Destroy', book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?"%></tb>
                <% end %>
              </tr>
            </thead>
         </table>
     </div>
    </div>
   </div>
  </div>

