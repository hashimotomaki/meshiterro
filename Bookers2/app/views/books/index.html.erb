
 <div class="container">
  <div class="row">
   <div class="col-xs-3">

    <%= render 'books/info', book: @book, user: @user %>
    </div>
    <div class="main">
     <div class="col-xs-9">
      <h2>Books</h2>


        <table class="table table-hover table-inverse">
         <thead>
          <tr>
            <th colspan="3"></th>
            <th>Title</th>
            <th>Opinion</th>

          </tr>
         </thead>

       <%  @books.each  do |f| %>
        <table class="table table-hover table-inverse">
          <tbody>
           <tr>
             <tb><%= link_to user_path(f) do %><%= attachment_image_tag f.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><% end %></tb>
             <tb><%= link_to book_path(f.id) do %><%= f.title %><% end %></tb>
             <tb><%= f.body %></tb>
           </tr>
          </tbody>
       <% end %>
     </div>
    </div>
  </div>
</div>
